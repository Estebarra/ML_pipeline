name: download_file

entry_points:
  main:
    parameters:

      dataset:
        description: Nombre del conjunto de datos a cargar
        type: string

      artifact_name:
        description: Nombre del artefacto de salida
        type: string

      artifact_type:
        description: Tipo del artefacto de salida. Esto se utilizará para categorizar el artefacto en la interfaz de W&B
        type: string

      artifact_description:
        description: Una breve descripción del artefacto de salida
        type: string

    command: >-
      python run.py --dataset {dataset} \
                    --artifact_name {artifact_name} \
                    --artifact_type {artifact_type} \
                    --artifact_description {artifact_description}