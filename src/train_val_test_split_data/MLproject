name: train_val_test_split_data
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: W&B artifact con los datos completos
        type: string

      test_size:
        description: Proporción de datos para test
        type: float
        default: 0.2

      val_size:
        description: Proporción de datos para validation
        type: float
        default: 0.2

      random_state:
        description: Seed para reproducibilidad
        type: int
        default: 42

      stratify_column:
        description: Columna para stratified split (opcional)
        type: string
        default: "none"
        
    command: "python run.py {input_artifact} {test_size} {val_size} {random_state} {stratify_column}"