name: train_val_test_split_data

entry_points:
  main:
    parameters:

      input_artifact:
        description: W&B artifact con los datos completos
        type: string

      test_size:
        description: ProporciÃ³n de datos para test
        type: float
        default: 0.2

      random_state:
        description: Seed para reproducibilidad
        type: int
        default: 42

      stratify_column:
        description: Columna para stratified split (opcional)
        type: string
        default: "none"
        
    command: >-
      python run.py --input_artifact {input_artifact} \
                    --test_size {test_size} \
                    --random_state {random_state} \
                    --stratify_column {stratify_column}